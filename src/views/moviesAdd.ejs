<!DOCTYPE html>
<html lang="es">

<%- include('partials/head',{
    title : 'Crear películas'
})%>

<body class="body--add">
    <%- include('partials/header')%>
      <div class="movie--add">
        
    <h1 class="titulo">Agregar Película</h1>
    <br>
    <section class="formulario">
        <div class="card-body d-flex justify-content-center">
        <form action="/movies/create" method="POST" enctype="multipart/form-data">

            <div class="col-12 col-md-6 mb-3">
            <label class="form-label" for="title">Title </label>
            <p><input class="form-control w-auto" type="text" name="title" id="">
            </p>
            </div>

            <div class="col-12 col-md-6 mb-3">

                <label class="form-label" for="rating">Rating </label>
                <p><input class="form-control w-auto" type="number" name="rating" id="">
            </div>


            <div class="col-12 col-md-6 mb-3">

                <label class="form-label" for="awards">Awards </label>
                <p><input class="form-control w-auto" type="number" name="awards" id="">
            </div>


            <div class="col-12 col-md-6 mb-3">

                <label class="form-label" for="release_date">Release date </label>
                <p><input class="form-control w-auto" type="date" name="release_date" id=""></p>
            </div>

           

            <div class="col-12 col-md-6 mb-3">

                <label class="form-label" for="length">Length </label>
                <p><input class="form-control w-auto" type="number" name="length" id=""></p>
            </div>

            <div class="col-12 col-md-6 mb-3">

                <label class="form-label" for="genre_id">Genre </label>
                <p>
                     <select class="form-control w-auto" name="genre_id" id="" >
                        <option value="" disabled selected>- select genre - </option>
                        <% genres.forEach(genre => { %>
                        <option value="<%= genre.id %>"><%= genre.name %></option>
                        <% }); %>
                    </select>
                </p>
            </div>
            <div class="col-12 d-flex justify-content-center gap-2 mb-3">
                <label for="image" class="btn btn-primary">Agregar una imagen</label>
                <input type="file" name="image" id="image" hidden />
                
              </div>
              <div class="mb-3 md-col-12">
                <h5 class="form-label">Actores</h5>
                <hr>
                <div class="row">
                    <% actors.forEach(actor => { %>
                        <div class="col-12 col-md-3 col-lg-2">
                            <div class="form-check">
                                <input name="actors" class="form-check-input d-flex gap-1" <%= locals.old && old.actors.find(movie_actor => movie_actor == actor.id ) && 'checked' %>  type="checkbox" value="<%= actor.id %>" id="actor<%= actor.id %>" >
                                <label class="form-check-label" for="actor<%= actor.id %>">
                                    <%= actor.first_name %>
                                    <%= actor.last_name %>
                                </label>
                            </div>
                        </div>
                    <% }) %>
                </div>
              

<br>
</div>

<div class="d-flex justify-content-end">
    <p> <button class="botonAgregar" type="submit">Agregar película</button>

        <a class="botonVolver" href="/movies">Listado de Películas</a>
    </p>
</div>
</div>
</form>

</section>
    </div>
</body>

</html>